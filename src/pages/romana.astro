---
import Base from "../layouts/base.astro";
import DiosCard from "../components/CardDios.astro";
import dioses from "../data/dioses.json";


const diosesRomana = dioses.filter((d) => d.mitologia === "Romana");
---

<Base>

  <section class="text-center mt-10 w-full">
    <div class="flex justify-center flex-col items-center">
    <h1 class="text-4xl font-bold text-[#252525] mb-8">Dioses de Roma</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 lg:gap-2 lg:p-4 items-center">
      {diosesRomana.map((dios) => (
        <DiosCard dios={dios} />
      ))}
    </div>
    </div>
  </section>

</Base>